<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.WiFiHarvest" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Mr. Robot Core Colors -->
        <item name="colorPrimary">@color/mr_robot_green</item>
        <item name="colorSecondary">@color/mr_robot_cyan</item>
        <item name="colorOnPrimary">@color/mr_robot_green</item>
        <item name="colorOnSecondary">@color/terminal_white</item>

        <!-- Background Colors -->
        <item name="android:windowBackground">@color/terminal_black</item>
        <item name="android:colorBackground">@color/terminal_black</item>
        <item name="colorSurface">@color/dark_army_gray</item>
        <item name="colorOnSurface">@color/mr_robot_green</item>

        <!-- Text Colors -->
        <item name="android:textColor">@color/mr_robot_green</item>
        <item name="android:textColorPrimary">@color/mr_robot_green</item>
        <item name="android:textColorSecondary">@color/terminal_white</item>

        <!-- Navigation Colors -->
        <item name="colorPrimaryContainer">@color/dark_army_gray</item>
        <item name="colorOnPrimaryContainer">@color/mr_robot_green</item>

        <!-- Status Bar -->
        <item name="android:statusBarColor">@color/terminal_black</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:navigationBarColor">@color/terminal_black</item>

        <!-- Force dark mode elements -->
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>
</resources>